<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.neuralnetworknumber.HelloController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Canvas fx:id="drawCanvas" width="280.0" height="280.0"/>
    <Button fx:id="clearButton" text="Clear"/>
    <Button fx:id="predictButton" text="Predict"/>

    <TextField fx:id="labelInput" promptText="Enter correct label (0â€“9)" />
    <Button fx:id="trainButton" text="Train with Label" onAction="#onTrainButtonClick"/>

    <Label fx:id="resultLabel" text="Result will appear here"/>
</VBox>